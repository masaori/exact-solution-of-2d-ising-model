    (
      hat(Z)_mu^((minus)),
      hat(Y)_mu
    )
    dot.c
    mat(
      plus
      sqrt(
        -1
      )
      sqrt(
        gamma_2(theta_(mu))
        gamma_2(-theta_(mu))
      )
